# Server Configuration
PORT=3000
NODE_ENV=development

# Whisper Configuration (Speech Recognition)
WHISPER_MODEL=base.en
WHISPER_LANGUAGE=en
WHISPER_SERVICE_URL=http://localhost:9000

# Ollama Configuration (AI Text Improvement)
OLLAMA_MODEL=llama3
OLLAMA_BASE_URL=http://localhost:11434

# TTS Configuration (Voice Synthesis)
TTS_SERVICE_URL=http://localhost:5002
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_VOICE_ID=default

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=BlackHole 2ch

# Real-time Configuration
REALTIME_ENABLED=true
REALTIME_CHUNK_DURATION=3
REALTIME_SILENCE_THRESHOLD=0.01

# Optional: AI Service Configuration (for cloud fallbacks)
AI_SERVICE_URL=https://api.openai.com/v1
AI_API_KEY=your_api_key_here

# Optional: Voice Service Configuration (for cloud fallbacks)
VOICE_SERVICE_URL=your_voice_service_url_here
VOICE_API_KEY=your_voice_api_key_here